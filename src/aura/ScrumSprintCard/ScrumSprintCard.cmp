<aura:component description="ScrumSprintCard">

    <aura:attribute name="sprint" type="sObject"/>

    <lightning:card footer="Card Footer" title="Sprint">
        <aura:set attribute="actions">
            <lightning:button label="New"/>
        </aura:set>
        <p class="slds-p-horizontal_small">
            <aura:if isTrue="{!v.showSpinner}">
                <lightning:spinner/>
            </aura:if>
            <aura:if isTrue="{!!v.saved}">
                <lightning:recordEditForm
                        onload="{!c.handleLoad}"
                        onsubmit="{!c.handleSubmit}"
                        onsuccess="{!c.handleSuccess}"
                        recordId="{!v.sprint.Id}"
                        objectApiName="Sprint__c">
                    <!-- the messages component is for error messages -->
                    <lightning:messages/>

                    <lightning:inputField fieldName="Name"/>
                    <lightning:inputField fieldName="Date_finish__c"/>
                    <lightning:inputField fieldName="Project__c"/>
                    <lightning:inputField fieldName="Start_Day__c"/>
                    <lightning:inputField fieldName="Total_Estimate__c"/>
                    <lightning:inputField fieldName="Type__c"/>
                    <div class="slds-m-top_medium">
                        <lightning:button disabled="{!v.disabled}" variant="brand" type="submit" name="save"
                                          label="Save"/>
                    </div>
                </lightning:recordEditForm>
                <aura:set attribute="else">
        <p>Saved!</p>
        </aura:set>
        </aura:if>
        </p>
    </lightning:card>
</aura:component>